                        <%= f.label :email, 'Seu email:' %><br>
                        <%= f.text_field :email, required: true, class: "form-control" %><br>
                    </div><!-- /form-group -->

                    <div class="form-group">
                        <%= f.label :fone, 'Seu telefone:' %><br>
                        <%= f.text_field :fone, required: true, class: "form-control" %><br>
                    </div><!-- /form-group -->                    

