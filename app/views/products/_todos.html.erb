<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">

	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">Linha <%= @line.name %></h4>
    </div>
    <div class="modal-body">

      <div class="row">
        <div class="col-lg-3">
          <ul class="nav nav-pills nav-stacked">
            <% @products.each_with_index do |product, index| %>
              <li role="tab" data-target="#<%= product.id %>" data-toggle="tab" class="text-center <%= 'active' if index == 0 %>"><a href="#<%= product.id %>">
                <%= image_tag product.image.url(:thumb), alt: product.name, class: '' %><br>
                <%= product.name %></a></li>
            <% end %>
          </ul>
        </div><!-- /col -->
        <div class="col-lg-9">
          <!-- Tab panes -->
          <div class="tab-content">
          <% @products.each_with_index do |product, index| %>
            <div role="tabpanel" class="tab-pane fade in <%= 'active' if index == 0 %>" id="<%= product.id %>">
              <div class="product-image text-center">
                <span class="product-titulo">
                  <%= product.name %>
                </span><br>
                <%= image_tag product.image.url(:original), alt: product.name, class: '' %>
              </div><!-- /product-image -->
              <div class="row">
                <div class="col-lg-6">
                  <div class="product-description lead">
                    <%= markdown(product.description) %>
                  </div><!-- /product-description -->
                  <hr>
                  <div class="product-description-allergenic">
                    <%= raw(product.allergenic) %>
                  </div><!-- /product-description -->
                </div><!-- /.col -->
                <div class="col-lg-6">
                  <div class="product-description">
                    <%= raw(product.nutrition_facts) %>
                  </div><!-- /product-description -->
                </div><!-- /.col -->
              </div><!-- /.row -->
            </div><!-- /tabpanel -->
          <% end %>
        </div><!-- /col -->
      </div><!-- /row -->
    </div>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

