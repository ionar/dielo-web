<!-- Lines  -->
<div id="lines">
	<div class="container">
		<%= scroll_reveal animation: 'enter bottom move 100px, after 1s' do %>
			<div class="titulo-wrapper text-center">
	  			<%= image_tag 'titulo-produtos.png', alt: 'Produtos' %>
			</div>
		<% end %>
	</div><!-- /container -->
	<div class="container">
		<div class="categorias-list row">
		  <div class="col-lg-12 col-md-12">
	        <div class="envolucro">
	            <div class="category-line-name">
	                <%= @line.category.name %> <%= @line.name %>
	            </div>
	        </div><!-- /envolucro -->
	        <div class="lines-list">
	          <div class="row">
				<% @line.products.each do |product| %>
	              <%= link_to product do %>
	                <div class="line-wrapper col-lg-2 col-md-2 col-sm-2 col-xs-12">
	                  <div class="line-name">
	                    <span class="line-name-span lead"><%= product.name %></span>
	                  </div><!-- /line-name -->
	                  <div class="line-photo">
	                    <%= image_tag product.image.url(:original), alt: product.name, class: 'img-responsive' %>
	                  </div><!-- /line-photo" -->
	                </div><!-- /line-wrapper -->
	              <% end %>
	            <% end %>
	          </div><!-- /row -->
	        </div><!-- /lines-list -->
	      </div><!-- /col -->
		</div><!-- /categorias-list row -->	
	</div><!-- /container -->
</div><!-- /#lines -->