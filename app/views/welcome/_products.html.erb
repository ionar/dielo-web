<!-- Produtos -->
<div id="produtos">
  <div class="container">
    <div class="text-center">
      <%= image_tag 'titulo-produtos.png', alt: 'Produtos' %>
    </div>
    <div class="categorias-list row">
    <% @categories.each do |category|  %>
      <div class="col-lg-6 col-md-6">
        <div class="envolucro">
            <div class="category-name">
                <%= category.name %>
            </div>
        </div><!-- /envolucro -->
        <div class="products-list">
          <% Product.where(category_id: category.id).each do |product| %>
            <span> <%= product.name %> </span><br>
          <% end %>
        </div><!-- /products-list -->
      </div><!-- /col -->
      <% end %>
    </div><!-- /categorias-list row --> 
  </div><!-- /container -->
</div><!-- /produtos -->