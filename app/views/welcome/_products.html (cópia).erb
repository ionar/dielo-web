<!-- Produtos -->
<div id="produtos">
  <div class="container">
    <%= scroll_reveal animation: 'enter bottom move 100px, after 1s' do %>
    <div class="titulo-wrapper text-center">
      <%= image_tag 'titulo-produtos.png', alt: 'Produtos' %>
    </div>
    <% end %>
    <div class="categorias-list row">
    <% @categories.each do |category|  %>
      <div class="col-lg-6 col-md-6">
        <div class="envolucro">
            <div class="category-name">
                <%= category.name %>
            </div>
        </div><!-- /envolucro -->
        <div class="products-list">
          <ul>
            <% Line.where(category_id: category.id).each do |line| %>
              <li> <%= line.name %> 
                <ul>
                  <% Product.where(line_id: line.id).each do |product| %>
                  <li> <%= product.name %></li>
                  <% end %>
                </ul>
              </li>
            <% end %>
          </ul>
        </div><!-- /products-list -->
      </div><!-- /col -->
      <% end %>
    </div><!-- /categorias-list row --> 
  </div><!-- /container -->
</div><!-- /produtos -->